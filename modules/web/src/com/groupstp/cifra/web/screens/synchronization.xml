<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        class="com.groupstp.cifra.web.screens.Synchronization"
        focusComponent="txtPass"
        messagesPack="com.groupstp.cifra.web.screens">
    <dialogMode height="600"
                width="800"/>
    <layout expand="log"
            margin="true"
            spacing="true">
        <hbox spacing="true">
            <label value="Date start"/>
            <dateField id="dateStart"
                       dateFormat="dd.MM.yyyy"/>
            <label value="Date end"/>
            <dateField id="dateEnd"
                       dateFormat="dd.MM.yyyy"/>
        </hbox>
        <hbox align="MIDDLE_LEFT"
              spacing="true">
            <label id="url"
                   value="URL"/>
            <textField id="txtUrl"
                       width="400px"/>
            <label description="msg://Password"
                   value="msg://Password"/>
            <textField id="txtPass"/>
        </hbox>
        <button id="testSync"
                caption="msg://test"
                invoke="onTestSyncClick"/>
        <textArea id="log"
                  width="100%"/>
    </layout>
</window>
