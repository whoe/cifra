<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://Coordination"
        class="com.groupstp.cifra.web.document.Coordination"
        messagesPack="com.groupstp.cifra.web.document">
    <dsContext>
        <groupDatasource id="documentsDs"
                         class="com.groupstp.cifra.entity.Document"
                         view="document-contract-view">
            <query>
                <![CDATA[select e from cifra$Document e where e.createdBy = :session$userLogin]]>
            </query>
        </groupDatasource>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout spacing="true">
        <tabSheet id="tabs"
                  height="100%">
            <tab id="myContracts"
                 caption="msg://myContracts"
                 expand="contracts"
                 margin="true,false,false,false"
                 spacing="true">
                <filter applyTo="contracts"
                        datasource="documentsDs"/>
                <groupTable id="contracts"
                            multiselect="true"
                            width="100%">
                    <actions>
                        <action id="remove"/>
                        <action id="refresh"/>
                        <action id="history"/>
                    </actions>
                    <columns>
                        <group>
                            <column id="company"/>
                            <column id="division"/>
                            <column id="date"/>
                            <column id="contragent"/>
                        </group>
                        <column id="description"/>
                        <column id="number"/>
                        <column id="status"/>
                    </columns>
                    <rows datasource="documentsDs"/>
                    <rowsCount/>
                    <buttonsPanel id="buttonsPanel"
                                  alwaysVisible="true">
                        <button id="createBtn"/>
                        <button id="editBtn"/>
                        <button id="removeBtn"
                                action="contracts.remove"/>
                        <button id="refreshBtn"
                                action="contracts.refresh"/>
                        <button id="toWorkBtn"/>
                        <button id="historyBtn"/>
                        <button id="irrelevantBtn"/>
                    </buttonsPanel>
                </groupTable>
            </tab>
        </tabSheet>
    </layout>
</window>
