<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://browseCaption"
        class="com.groupstp.cifra.web.document.DocumentBrowse"
        messagesPack="com.groupstp.cifra.web.document">
    <dsContext>
        <groupDatasource id="documentsDs"
                         class="com.groupstp.cifra.entity.Document"
                         view="document-view">
            <query>
                <![CDATA[select e from cifra$Document e
where e.docStatus=10]]>
            </query>
        </groupDatasource>
        <collectionDatasource id="tagsDs"
                              allowCommit="false"
                              class="com.groupstp.cifra.entity.Tag"/>
        <collectionDatasource id="filteredTagsDs"
                              class="com.groupstp.cifra.entity.Tag"
                              datasourceClass="com.groupstp.cifra.web.data.FilterTagsCollectionDatasource"/>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout spacing="true">
        <tabSheet id="tabs"
                  height="100%">
            <tab id="II"
                 caption="msg://Documents"
                 expand="income"
                 margin="true,false,false,false"
                 spacing="true">
                <filter applyTo="income"
                        datasource="documentsDs"/>
                <hbox id="incomeHBox"
                      spacing="true"
                      width="70%"/>
                <groupTable id="income"
                            multiselect="true"
                            width="100%">
                    <actions>
                        <action id="edit"
                                openType="DIALOG"/>
                        <action id="create"
                                openType="DIALOG"/>
                        <action id="remove"/>
                        <action id="refresh"/>
                    </actions>
                    <columns>
                        <group>
                            <column id="company"/>
                            <column id="division"/>
                            <column id="docType"/>
                            <column id="date"/>
                            <column id="contragent"/>
                        </group>
                        <column id="description"/>
                        <column id="number"/>
                        <column id="dateLoad"/>
                        <column id="fixDue"/>
                        <column id="warehouse"/>
                        <column id="cell"/>
                        <column id="externalLink"/>
                        <column id="externalId"/>
                        <column id="direction"/>
                        <column id="status"/>
                        <column id="stepName"/>
                    </columns>
                    <rows datasource="documentsDs"/>
                    <rowsCount/>
                    <buttonsPanel id="buttonsPanel"
                                  alwaysVisible="true">
                        <button id="createBtn"
                                action="income.create"/>
                        <button id="editBtn"
                                action="income.edit"/>
                        <button id="removeBtn"
                                action="income.remove"/>
                        <button id="refreshBtn"
                                action="income.refresh"/>
                    </buttonsPanel>
                </groupTable>
            </tab>
        </tabSheet>
    </layout>
</window>
