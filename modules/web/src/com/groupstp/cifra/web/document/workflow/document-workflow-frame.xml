<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        class="com.groupstp.cifra.web.document.workflow.DocumentWorkflowFrame"
        messagesPack="com.groupstp.cifra.web.document.workflow">
    <dsContext>
        <collectionDatasource id="documentDs"
                              class="com.groupstp.cifra.entity.Document"
                              view="document-wf_view"/>
    </dsContext>
    <layout expand="documentsTable"
            spacing="true">
        <filter id="filter"
                applyTo="documentsTable"
                datasource="documentDs">
            <properties include=".*"/>
        </filter>
        <table id="documentsTable"
               multiselect="true"
               width="100%">
            <columns>
                <column id="company"/>
                <column id="division"/>
                <column id="docType"/>
                <column id="date"/>
                <column id="contragent"/>
                <column id="description"/>
                <column id="number"/>
                <column id="dateLoad"/>
                <column id="problems"
                        maxTextLength="5"/>
                <column id="fixDue"/>
                <column id="warehouse"/>
                <column id="cell"/>
                <column id="externalLink"/>
                <column id="externalId"/>
                <column id="direction"/>
            </columns>
            <rows datasource="documentDs"/>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true"/>
        </table>
    </layout>
</window>
