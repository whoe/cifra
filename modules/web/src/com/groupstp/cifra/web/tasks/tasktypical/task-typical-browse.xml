<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://browseTypicalTasks"
        class="com.groupstp.cifra.web.tasks.tasktypical.TaskTypicalBrowse"
        focusComponent="taskTypicalTable"
        lookupComponent="taskTypicalTable"
        messagesPack="com.groupstp.cifra.web.tasks.tasktypical">
    <dsContext>
        <groupDatasource id="taskTypicalDs"
                         class="com.groupstp.cifra.entity.tasks.TaskTypical"
                         view="_local">
            <query>
                <![CDATA[select e from tasks$TaskTypical e]]>
            </query>
        </groupDatasource>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="taskTypicalTable"
            spacing="true">
        <filter id="filter"
                applyTo="taskTypicalTable"
                datasource="taskTypicalDs">
            <properties include=".*"/>
        </filter>
        <groupTable id="taskTypicalTable"
                    width="100%">
            <actions>
                <action id="create"/>
                <action id="edit"/>
                <action id="remove"/>
            </actions>
            <columns>
                <column id="name"/>
                <column id="description"/>
                <column id="interval"/>
                <column id="intervalType"/>
            </columns>
            <rows datasource="taskTypicalDs"/>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn"
                        action="taskTypicalTable.create"/>
                <button id="editBtn"
                        action="taskTypicalTable.edit"/>
                <button id="removeBtn"
                        action="taskTypicalTable.remove"/>
            </buttonsPanel>
        </groupTable>
    </layout>
</window>
